<%= form_for event do |f| %>
  <p>
    <%= f.label :name %>:
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :date, "Date (YYYY/MM/DD)" %>:
    <%= f.text_field :date %>
  </p>

  <p>
    <%= f.label :capacity %>:
    <%= f.text_field :capacity %>
  </p>

  <p>
    <%= f.label :city %>:
    <%= f.text_field :city %>
  </p>

  <%= f.submit "Submit" %>
<% end %>